<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="Aquasys.MVVM.Models"
             x:Class="Aquasys.MVVM.Views.MainPage.MainPage">

     <VerticalStackLayout>
        <Grid ColumnDefinitions ="60*,40*"
              Padding="15,12,0,10"
              Margin="0,0,0,5"
              BackgroundColor="{StaticResource Primary}">
            <Grid.Shadow>
                <Shadow Brush="Black" 
                    Offset="2,2"
                    Opacity="0.5"/>
            </Grid.Shadow>
            <VerticalStackLayout Grid.Column="0">
                <Label Text="AQUASYS" 
                       FontSize="30" 
                       CharacterSpacing="1"
                       TextColor="White" 
                       FontAttributes="Bold"
                       Margin="0,0,0,5">
                    <Label.Shadow>
                        <Shadow Brush="Black" 
                            Offset="2,2" 
                            Opacity="0.5"/>
                    </Label.Shadow>
                </Label>
                <VerticalStackLayout Spacing="-3">
                    <Label 
                        Text="THIAGO FREITAS"
                        TextColor="White"
                        FontAttributes="Bold"/>
                    <Label 
                        Text="SÃO FRANCISCO DO SUL - SC" 
                        TextColor="White"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1">

            </VerticalStackLayout>
        </Grid>

        <ScrollView>
            <!--<CollectionView>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate></DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>-->
            <Grid RowDefinitions="*,*" RowSpacing="5">
                <Frame Grid.Row="0" BorderColor="Black" CornerRadius="0">
                    <HorizontalStackLayout>
                        <Button 
                            TextColor="{StaticResource Primary}"
                            BackgroundColor="White"
                            Padding="10"
                            FontAttributes="Bold"
                            FontSize="30"
                            WidthRequest="100"
                            HeightRequest="100"
                            Scale="0.9"
                            Command="{Binding BtnVesselClickCommand}">
                            <Button.ImageSource>
                                <FileImageSource File="vesselmain.svg" ></FileImageSource>
                            </Button.ImageSource>
                        </Button>
                        <Button 
                           Grid.Row="0"
                           Grid.Column="1"
                           Text="Vessel"
                           TextColor="{StaticResource Primary}"
                           BackgroundColor="White"
                           Padding="10"
                           FontAttributes="Bold"
                           FontSize="30"
                           Command="{Binding BtnVesselClickCommand}"/>
                    </HorizontalStackLayout>
                </Frame>
                <Frame Grid.Row="1" BorderColor="Black" CornerRadius="0">
                    <HorizontalStackLayout >
                        <Button 
                            TextColor="{StaticResource Primary}"
                            BackgroundColor="White"
                            Padding="10"
                            FontAttributes="Bold"
                            FontSize="30"
                            WidthRequest="100"
                            HeightRequest="100"
                            Scale="0.9">
                            <Button.ImageSource>
                                <FileImageSource File="reportmain.svg" ></FileImageSource>
                            </Button.ImageSource>
                        </Button>
                        <Button
                          Text="Report"
                          TextColor="{StaticResource Primary}"
                          BackgroundColor="White"
                          Padding="10"
                          FontAttributes="Bold"
                          FontSize="30"/>
                    </HorizontalStackLayout>
                </Frame>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
   

</ContentPage>
