<?xml version="1.0" encoding="utf-8" ?>
<local:BasePages xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:local="clr-namespace:Aquasys.App.MVVM.Views"
             xmlns:s="clr-namespace:Aquasys.App.MVVM.ViewModels.Vessel"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxco="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
             xmlns:viewmodel="clr-namespace:Aquasys.App.MVVM.ViewModels.Vessel"
             xmlns:view="clr-namespace:Aquasys.App.MVVM.Views.Vessel.Tabs"
             x:Class="Aquasys.App.MVVM.Views.Vessel.VesselMainPage"
             x:DataType="viewmodel:VesselMainViewModel">

    <Grid>
        <dxco:TabView SelectedItemIndex="{Binding SelectedTabIndex}" SwipeEnabled="False"
            HeaderPanelIndent="0"
            HeaderPanelShadowColor="{StaticResource Primary}" 
            HeaderPanelShadowHeight="3">
            <dxco:TabViewItem HeaderIcon="vesseltablist">
                <dxco:TabViewItem.Content>
                    <ScrollView>
                        <ContentView Content="{Binding VesselRegistrationTabPage}" />
                    </ScrollView>
                </dxco:TabViewItem.Content>
            </dxco:TabViewItem>

            <dxco:TabViewItem HeaderIcon="cargotablist">
                <dxco:TabViewItem.Content>
                    <ScrollView>
                        <ContentView Content="{Binding VesselHoldRegistrationTabPage}" />
                    </ScrollView>
                </dxco:TabViewItem.Content>
            </dxco:TabViewItem>

            <dxco:TabViewItem HeaderIcon="inspectiontablist">
                <dxco:TabViewItem.Content>
                    <ScrollView>
                        <ContentView Content="{Binding VesselInspectionRegistrationTabPage}" />
                    </ScrollView>
                </dxco:TabViewItem.Content>
            </dxco:TabViewItem>
        </dxco:TabView>
    </Grid>
</local:BasePages>