<?xml version="1.0" encoding="utf-8" ?>
<local:BasePages xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:local="clr-namespace:Aquasys.App.MVVM.Views"
             xmlns:s="clr-namespace:Aquasys.App.MVVM.ViewModels.Vessel"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:de="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
             xmlns:dxdf="clr-namespace:DevExpress.Maui.DataForm;assembly=DevExpress.Maui.Editors"
             xmlns:dc="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
             xmlns:dx="clr-namespace:DevExpress.Maui.Core;assembly=DevExpress.Maui.Core"
             xmlns:dxcv="clr-namespace:DevExpress.Maui.CollectionView;assembly=DevExpress.Maui.CollectionView"
             xmlns:edit="clr-namespace:Aquasys.App.Controls.Editors"
             xmlns:viewmodel="clr-namespace:Aquasys.App.MVVM.ViewModels.Vessel"
             xmlns:view="clr-namespace:Aquasys.App.MVVM.Views.Vessel.Tabs"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Aquasys.App.MVVM.Views.Vessel.VesselListPage">

    <local:BasePages.ToolbarItems>
        <ToolbarItem 
            IconImageSource="filter.png"
            Priority="0"
            Order="Primary"
            Command="{Binding OpenFilterCommand}" />
    </local:BasePages.ToolbarItems>
    
    <Grid RowDefinitions="Auto, *">

        <Grid Grid.Row="0" 
              Padding="20"
              BackgroundColor="{StaticResource Primary}" >
            <de:TextEdit 
                Grid.Row="0"
                StartIcon="search.png"
                CursorColor="{StaticResource White}"
                StartIconColor="{StaticResource White}"
                PlaceholderText="Search"
                BorderThickness="0.8"
                FocusedBorderThickness="1"
                FocusedBorderColor="{StaticResource White}"
                BackgroundColor="{StaticResource Primary}"
                PlaceholderColor="{StaticResource White}"
                BorderColor="{StaticResource White}"
                TextColor="{StaticResource White}"
                BoxPadding="10"
                HeightRequest="40"
                Text="{Binding SearchVesselName}"
                TextChangedCommand="{Binding SearchVesselNameChangedCommand}" />
        </Grid>

        <ScrollView Grid.Row="1" Orientation="Vertical">
            <dxcv:DXCollectionView ItemsSource="{Binding Vessels}" SelectionMode="None" IsScrollBarVisible="False">
                <dxcv:DXCollectionView.ItemTemplate Grid.Row="2">
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItem Text="Delete" 
                                           BackgroundColor="Red" 
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:VesselListViewModel }}, Path=DeleteVesselCommand}"
                                           CommandParameter="{Binding .}"/>
                            </SwipeView.RightItems>
                            <Frame Grid.ColumnSpan="2" CornerRadius="0" Padding="0" HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:VesselListViewModel }}, Path=EditVesselCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                                <Grid Grid.Row="2" ColumnDefinitions="45*,1*,60*">
                                    <Image Source="{Binding FirstImage, Converter={toolkit:ByteArrayToImageSourceConverter}}"
                                           Grid.Column="0"
                                           Aspect="AspectFill"
                                           HeightRequest="120"
                                           WidthRequest="165"/>

                                    <dx:DXSeparator Grid.Column="1"
                                                    FlowDirection="MatchParent"
                                                    Orientation="Vertical" />

                                    <Grid Grid.Column="2" RowDefinitions="Auto, *" RowSpacing="10" Padding="5">
                                        <FlexLayout Direction="Row"
                                                    AlignItems="Center"
                                                    JustifyContent="Start"
                                                    Margin="0,0,0,5">
                                            <Label Text="{Binding FlagIcon}"
                                                   FontSize="Medium"/>
                                            <Label Text="{Binding VesselName}"
                                                   FontAttributes="Bold"
                                                   FontSize="Medium"
                                                   Margin="5,0,0,0"
                                                   TextColor="{StaticResource Primary}"/>
                                        </FlexLayout>

                                        <Grid Grid.Row="1" RowDefinitions="Auto,Auto,Auto">
                                            <Grid ColumnDefinitions="Auto,*" Grid.Row="0" Margin="0,1" ColumnSpacing="3">
                                                <Label Text="I.M.O:" FontAttributes="Bold"/>
                                                <Label Text="{Binding Imo}" Grid.Column="1"/>
                                            </Grid>
                                            <Grid ColumnDefinitions="Auto,*" Grid.Row="1" Margin="0,1" ColumnSpacing="3">
                                                <Label Text="Port Registry:" FontAttributes="Bold"/>
                                                <Label Text="{Binding PortRegistry}" Grid.Column="1"/>
                                            </Grid>
                                            <Grid ColumnDefinitions="Auto,*" Grid.Row="2" Margin="0,1" ColumnSpacing="3">
                                                <Label Text="Owner:" FontAttributes="Bold"/>
                                                <Label Text="{Binding Owner}" Grid.Column="1"/>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </dxcv:DXCollectionView.ItemTemplate>
            </dxcv:DXCollectionView>
        </ScrollView>

        <edit:DCFloatingMenu Grid.Row="1"
                   HeightRequest="50" 
                   WidthRequest="50"
                   HorizontalOptions="End"
                   VerticalOptions="End"
                   Margin="0,0,0,40"
                   MainButtonBackgroundColor="{StaticResource Primary}"
                   MainButtonIcon="icon_plus.png"
                   Command="{Binding AddVesselCommand}"/>
    </Grid>
</local:BasePages>